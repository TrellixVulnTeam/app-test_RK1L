<div class="home-page">
  <div class="banner">
    <div class="container">
      <h1 class="logo-font">Ember-test</h1>
        <img src="assets/ember.png" class="container__image">
    </div>
  </div>
  <div class="container page">
    <div class="row">
      <div class="col-md-12">
        <div class="feed-toggle">
          <ul class="nav nav-pills outline-active">
            {{#if this.session.isLoggedIn}}
              <li class="nav-item">
                  <LinkTo @route="index" @query={{hash feed=@this.model.username  tag=null page=1}} class="nav-link"
                          data-test-profile-tab="my-articles">My Records</LinkTo>
              </li>
            {{/if}}
            <li class="nav-item">
              {{#let (and (not this.tag) (not this.feed)) as |isGlobalFeed|}}
                <LinkTo @route="index" @query={{hash feed=null tag=null page=1}}
                  class="nav-link {{if isGlobalFeed "active"}}" data-test-tab="global">
                  All records
                </LinkTo>
              {{/let}}
            </li>
            {{#if this.tag}}
              <li class="nav-item">
                <LinkTo @route="index" @query={{hash feed=null tag=this.tag}} class="nav-link" data-test-tab="tag">
                  #{{this.tag}}</LinkTo>
              </li>
            {{/if}}
          </ul>
        </div>
        <ArticleList @feed={{this.feed}} @page={{this.page}} @tag={{this.tag}} />
      </div>
    </div>
  </div>
</div>
